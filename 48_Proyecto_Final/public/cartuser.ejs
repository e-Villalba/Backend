<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="main.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>

    <title>Backend - Proyecto Entrega Final</title>
</head>

<body>
    <% if (cart.username) { %>
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center mt-3">
                    <div class="card cardatosContacto">

                        <div class="card-body d-flex align-items-center justify-content-end ">                            
                            <p style="display:none" id="idCarrito"> <%=cart._id%>  </p>
                            <div>
                                <form id="confCarrito"  action="" method="" enctype="">                                                            
                                    <input type="hidden" name="username" value="<%=cart.username%>">
                                    <input type="hidden" name="_id" value="<%=cart._id%>">
                                    <input type="hidden" name="accion" value="confirmar">
                                    <!--<button id="btnConfirmar" type="button" class=" btn btn-outline-primary mx-3">Confirmar Compra</button>-->
                                    <!--<input type="submit" class="btn btn-outline-primary mx-3" id="btnConfirmar" value="Confirmar Compra" />-->
                                </form>

                            </div>
                            <div>
                                <input type="button" onclick="location.href='/'" class="btn btn-outline-secondary"  id="btnRegister" value="Volver a Home" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row" id="divContenedor">
                <form id="confCarrito"  action="" method="" enctype="">                                                            
                    <div class="col-md-12 text-center mt-3 card cardatosContacto">
                        <div class="card-body">
                            <div>
                                <h3 class="mb-0">Datos Carrito</h3>
                            </div>
                            <input type="hidden" name="_id" id="_id">
                            <div><label class="pContacto datosContacto" for="title">User Carrito</label></div>
                            <div><h5 class="datosForm datosContacto"><%= cart.username.toUpperCase() %></h5></div>
                            <div><label class="pContacto p-1 datosContacto" for="price">Total Carrito</label></div>
                            <div><h5 class="datosForm datosContacto" id="totalCarrito"></h5><h4 id="totalCarrito"></h4></div>
                            <div><label class="pContacto p-1 datosContacto" for="category" style="width: 15rem;">Dirección Entrega</label></div>
                            <div><input class="datosForm datosContacto" type="text" name="dire" id="dire" placeholder="Ingrese Dirección Entrega" style="width: 15rem;" required></div>
                            <div>
                                <input type="hidden" name="username" value="<%=cart.username%>">
                                <input type="hidden" name="_id" value="<%=cart._id%>">
                                <input type="hidden" name="accion" value="confirmar">
                                <button id="btnConfirmar" type="button" class=" btn btn-outline-primary mt-3">Confirmar Compra</button>
                        </div>
                        </div>


                    </div>
                </form>
            </div>
        </div>
            <% } %>
                <% if (!cart.username) { %>
                    <div class="logContainer">
                        <p class="userContainer"></p>
                        <p class="userP">No estas logueado</p>
                        <a href="/login">LOGIN</a>
                    </div>
        

        <% } %>


            <!-- Productos Begin   -->

            <div class="container">
                <!-- Filtro de Productos   -->
                <!-- Lista de Productos   -->
                <div class="container">

                    <div class="row">
                        <div class="col-md-12 text-center mt-3">
                            <div class="card cardatosContacto">

                                <div class="card-body">
                                    <!-- Tabla de Productos: ID,Title, Price y Thumbnail -->
                                    <h4>Productos del Carrito</h4>

                                        <div class="row" style="background-color:grey">
                                            <div class="col " style="color:white">Title</div>
                                            <div class="col " style="color:white">Price</div>
                                            <div class="col " style="color:white">Thumbnail</div>
                                            <div class="col " style="color:white">Cantidad</div>
                                            <div class="col " style="color:white">Valor</div>
                                            <div class="col " style="color:white"></div>
                                            <!--<div class="col " style="color:white"></div>-->
                                        </div>
                                        <div id="productoscart"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Productos End-->
            </div>
</body>
<script src="cart.js"></script>

</html>