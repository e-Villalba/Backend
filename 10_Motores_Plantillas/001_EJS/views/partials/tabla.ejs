                    <div class="col " style="color:white">Price</div>
                    <div class="col " style="color:white">Thumbnail</div>
                    
                  </div>
        
        <% for (let i = 0; i < produc.length; i++) { %>
            <div class="row d-flex align-items-center">
                <div class="col"><%=produc[i].title%></div>
