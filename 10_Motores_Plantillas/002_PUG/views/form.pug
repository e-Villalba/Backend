head
  meta(charset='utf-8')
  title Motores de Plantillas - Pug
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
  body    
    .modal-dialog
        .modal-content
          // Modal Header
          .text-center 
            h4(class="modal-title")  Motores de Plantillas - Pug
          // Modal Body
          .modal-body            
            form(role='form' method='POST' action='/productos')
              div.form-group
                label(for='title') Title:
                input#title.form-control(type='text', placeholder='Title' name='title' required)
              div.form-group
                label(for='price') Title:
                input#price.form-control(type='text', placeholder='Price' name='price' required)
              div.form-group
                label(for='thumbnail') Thumbnail:
                input#thumbnail.form-control(type='text', placeholder='Thumbnail' name='thumbnail' required)                
              div.container
              div.row.d-flex.justify-content-center 
                button.btn.btn-outline-primary.mt-3(type="submit", name="btnReg") Grabar
                a.btn.btn-outline-secondary.mt-3(href="/productos" role="button") Productos
              

               

    