html
    head 
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
        title="Motores de Plantillas - Pug" 
    body        
        div(class="container")
            div(class="row")
                div(class="row")
                    div(class="col-md-12 text-center mt-3")
                        fieldset(class="d-flex justify-content-center")
                        div(class="card-body" )
                            if produc.length >0     
                                div(class="text-center" )
                                    h2="Lista de Productos"            
                                div(class="row text-center" style="background-color:black")
                                    div(class="col" style="color:white") Title  
                                    div(class="col" style="color:white") Price
                                    div(class="col" style="color:white") Thumbnail
                                each prod in produc
                                    div(class="row align-items-center")                     
                                        div.col=prod.id
                                        div.col= prod.price
                                        div.col
                                            img(class="img-responsive w-25" src=prod.thumbnail)  
                            else
                                h2="No hay productos cargados"          
                        
                            a.btn.btn-outline-secondary.mt-3(href="/" role="button") Carga de Productos