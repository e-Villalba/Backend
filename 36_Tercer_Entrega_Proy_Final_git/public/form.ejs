<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="main.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="/socket.io/socket.io.js"></script>    
    <title>Backend - 3Â° Entrega Proyecto Final</title>
</head>

<body>
    <% if (user) { %>
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center mt-3">
                    <div class="card cardatosContacto">

                        <div class="card-body d-flex align-items-center justify-content-end">
                            <h5 class="px-5">Bienvenido <%= user.toUpperCase() %>
                            </h5>
                            
                            
                            <form action="/userinfo/" method="GET" id="datosUser">  
                            <input type="hidden" name="user" value="<%=user%>">
                            <input type="submit" class="btn btn-outline-secondary  mx-2" style="width: 6rem;" id="btnInfoUser"
                            value="Info User" />    
                            <input type="button" onclick="location.href='/carrito'" style="width: 6rem;" class="btn btn-outline-secondary mx-2" id="btnCart"
                            value="Carrito" /> 
                            <input type="button" onclick="location.href='/productosadmin'"  style="width: 6rem;" class="btn btn-outline-secondary mx-2" id="btnProdAdmin"
                            value="Productos" /> 
                            <input type="button" onclick="location.href='/logout'" style="width: 6rem;" class="btn btn-outline-primary mx-2" id="btnLogout"
                            value="Logout" />    
                        </form>			

                        </div>
                    </div>
                </div>
            </div>
            <% } %>
                <% if (!user) { %>
                    <div class="logContainer">
                        <p class="userContainer"></p>
                        <p class="userP">No estas logueado</p>
                        <a href="/login">LOGIN</a>
                    </div>
        </div>
        <% } %>
                    <!-- Productos Begin   -->

                    <div class="container">
                         <!-- Filtro de Productos   -->
                        <div class="row">
                            <div class="col-md-12 text-center mt-3">
                                <div class="card cardatosContacto">

                                    <div class="card-body">
                                        
                                            <div class="col-md-12 text-center mt-3 card cardatosContacto">
                                                <div class="card-body">
                                                    <div>
                                                        <h3 class="mb-0">Buscar Productos</h3>
                                                    </div>
                                                    <div>
                                                        <label class="pContacto datosContacto" for="title">Title</label>
                                                    </div>
                                                    <div><input class="datosForm datosContacto" type="text" name="titlesearch" id="titlesearch"
                                                            placeholder="Ingrese Title" style="width: 15rem;" required>
                                                        <input type="button" class="btn btn-outline-primary" id="btnBuscarProducto"
                                                            value="Buscar" />
                                                        <input type="button" class="btn btn-outline-secondary" id="btnListarTodos"
                                                           value="Listar " />
                                                    </div>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                         <!-- Lista de Productos   -->
                         <div class="container">

                            <div class="row">
                                <div class="col-md-12 text-center mt-3">
                                    <div class="card cardatosContacto">
    
                                        <div class="card-body">
                                            <!-- Tabla de Productos: ID,Title, Price y Thumbnail -->
                                            <%- include('../views/partials/productos.ejs'); %>
                                        </div>
                                    </div>
                                </div>
                            </div>
    
                        </div>

                    <!-- Productos End-->               
                </div>
                <script src="main.js"></script>
</body>

</html>